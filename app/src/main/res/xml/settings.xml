<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_category">

        <EditTextPreference
            android:defaultValue="@string/pref_user_default"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_user_label"
            android:key="@string/pref_user_key" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:title="@string/pref_check_label"
            android:key="@string/pref_check_key"
            android:summary="@string/pref_check_text"/>

    </PreferenceCategory>
</PreferenceScreen>